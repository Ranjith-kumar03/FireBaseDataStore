<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#070707"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:text="Login Here" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/usernameIDlogin"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:hint="Enter User Name"
        android:textColorHint="#ffffff"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/passwordIDlogin"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:hint="Enter Password"
        android:textColorHint="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="Login Here"
        android:background="#ffffff"
        android:id="@+id/loginBtnID"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:id="@+id/movetoRegistrationpage"
        android:text="Donot have Account Please click here" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:id="@+id/resetPassword"
        android:text="Forget Password Please Reset Account Here" />

    <ProgressBar
        android:id="@+id/loginprogressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>